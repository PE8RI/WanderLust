      <i class="fa-solid fa-ferry"></i>
      <p>Boats</p>
    </div>
    <div class="tax">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after tax</label>
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3"> 
  <% for (let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link"><div class="card col listing-card" >
    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem;">
    <div class="card-body">
      <p class="card-text"><b><%= listing.title %></b><br> &#8377; <%= listing.price.toLocaleString("en-IN") %>/night<i class="tax-info">&nbsp; +18%GST</i></p>
    </div>
  </div></a>
   
